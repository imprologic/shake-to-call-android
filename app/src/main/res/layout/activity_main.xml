<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <CheckBox
        android:id="@+id/option_shake_to_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/shake_to_answer"
        />

    <CheckBox
        android:id="@+id/option_shake_to_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/shake_to_call"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_number_to_call"
        android:labelFor="@id/entry_default_number"
        />
    <EditText
        android:id="@+id/entry_default_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autofillHints="phone"
        android:inputType="phone"
        android:ems="12"
        android:textAppearance="?android:attr/textAppearanceLarge"
    />

</LinearLayout>